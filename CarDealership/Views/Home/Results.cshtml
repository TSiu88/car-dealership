@{
  Layout = "_Layout";
}
@using CarDealership.Models
<div class="container">
  <h1>Search Results:</h1>
  <ul>
    @if (Model.Count == 0)
    {
      <p>There are currently no cars that match your search.</p>
    }
    @foreach (Car car in Model)
    {
      <li>Make: @car.MakeModel</li>
      <ul>
        <li>Description: @car.Description</li>
        <li>Miles: @car.Miles</li>
        <li>Price: @car.Price</li>
      </ul>
    }
  </ul>
  
</div>